generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id         String    @id @default(cuid())
  title      String
  genre      String
  minPlayers Int
  maxPlayers Int
  playTime   Int // in minutes
  publisher  String
  age        String
  rating     Float
  coverImage String
  isOwned    Boolean
  files      File[]
  sessions   Session[]
  wishlist   Wishlist?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  wishlistId String?
}

model Session {
  id        String   @id @default(cuid())
  date      DateTime
  notes     String?
  gameId    String
  game      Game     @relation(fields: [gameId], references: [id])
  createdAt DateTime @default(now())
}

model Wishlist {
  id        String   @id @default(cuid())
  reason    String?
  gameId    String   @unique
  game      Game     @relation(fields: [gameId], references: [id])
  createdAt DateTime @default(now())
}

model File {
  id        String   @id @default(cuid())
  title     String
  link      String
  gameId    String
  game      Game     @relation(fields: [gameId], references: [id])
  createdAt DateTime @default(now())
}
